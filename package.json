{
  "name": "volstora-base-app",
  "version": "1.0.0",
  "description": "Базовое переиспользуемое React Native приложение для Web/Android/iOS",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios", 
    "web": "npx webpack serve --config webpack.config.js --mode development",
    "start": "react-native start",
    "test": "jest",
    "test:web": "node test-web.js",
    "lint": "eslint .",
    "build:web": "npx webpack --config webpack.config.js --mode production",
    "build:android": "cd android && ./gradlew assembleRelease", 
    "build:ios": "cd ios && xcodebuild -workspace VolstoraBaseApp.xcworkspace -scheme VolstoraBaseApp -configuration Release",
    "postinstall": "echo 'Dependencies installed successfully'"
  },
  "dependencies": {
    "react": "18.3.1",
    "react-native": "0.76.1",
    "react-dom": "18.3.1",
    "react-native-web": "^0.19.12",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/stack": "^6.4.1",
    "@react-navigation/bottom-tabs": "^6.6.1",
    "react-native-screens": "^3.34.0",
    "react-native-safe-area-context": "^4.11.0",
    "react-native-gesture-handler": "^2.18.1",
    "react-native-reanimated": "^3.15.0",
    "react-native-vector-icons": "^10.1.0",
    "styled-components": "^6.1.13",
    "react-native-svg": "^15.6.0",
    "react-hook-form": "^7.53.0",
    "zustand": "^4.5.5",
    "@react-native-async-storage/async-storage": "^1.24.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native/babel-preset": "0.76.0",
    "@react-native/eslint-config": "0.76.0",
    "@react-native/metro-config": "0.76.0",
    "@react-native/typescript-config": "0.76.0",
    "@react-native-community/cli": "^14.1.0",
    "@types/react": "^18.3.4",
    "@types/react-native": "^0.73.0",
    "@types/styled-components": "^5.1.34",
    "typescript": "^5.5.4",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "jest": "^29.7.0",
    "@testing-library/react-native": "^12.7.2",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "html-webpack-plugin": "^5.6.0",
    "babel-loader": "^9.1.3",
    "file-loader": "^6.2.0"
  },
  "engines": {
    "node": ">=18"
  }
}